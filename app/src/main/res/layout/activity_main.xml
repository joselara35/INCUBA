<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraintLayoutMain"
    android:background="@color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="5dp"
        android:background="@color/grisOscuro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imag_inicial"
                android:layout_width="60dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/ic_baseline_person_pin_24" />

            <TextView
                android:id="@+id/text_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/myriadpro_blacksemicn"
                android:gravity="center_vertical"
                android:text="Obrero"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/contenedor_ubi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewwww"
                android:layout_width="60dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/ic_baseline_location_on_24" />

            <TextView
                android:id="@+id/text_ubicacion"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/myriadpro_blacksemicn"
                android:text="Ubicacion de incubadora" />
        </LinearLayout>
    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmenContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/barra_menu_inferior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutMain"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/barra_menu_inferior"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:gravity="center|center_horizontal"
        android:background="@color/grisOscuroExtra"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/btn_izquierdo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_data" />

        <ImageView
            android:id="@+id/btn_central"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/ic_home"
            app:backgroundTint="@color/naranja"/>

        <ImageView
            android:id="@+id/btn_derecho"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_settings"
            android:scaleType="fitXY"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>